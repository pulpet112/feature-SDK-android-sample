<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CompanyNameTheme" parent="AppTheme">
        <item name="companyNameButtonStyle">@style/FormButtonStyle</item>
        <item name="companyNameFontFamily">@font/font_android</item>
        <item name="companyNameTextColor">@color/error</item>
        <item name="companyNameDrawableIcon">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="FormButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="textAllCaps">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/orange</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_android</item>
    </style>
</resources>
